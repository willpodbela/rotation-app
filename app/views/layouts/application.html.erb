<!DOCTYPE html>
<html>
  <head>
    <title>The Rotation</title>
    <%= csrf_meta_tags %>
    <%= yield :stylesheets %>
  </head>

  <body>
    <% if notice %>
      <p class="alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert-danger"><%= alert %></p>
    <% end %>
    <%= yield :header %>
    <%= content_for?(:content) ? yield(:content) : yield %>
    <%= yield :footer %>
  </body>
</html>
