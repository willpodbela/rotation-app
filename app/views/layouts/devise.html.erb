<% content_for :stylesheets do %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Hind:300,400,500|Ubuntu:300,400,500', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', 'https://use.fontawesome.com/releases/v5.0.10/css/all.css', integrity: 'sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg', crossorigin: 'anonymous', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'https://maps.googleapis.com/maps/api/js?v=3&key=AIzaSyDP6Ex5S03nvKZJZSvGXsEAi3X_tFkua4U', 'data-turbolinks-track' => true %>
<% end %>

<% content_for :content do %>
  <%= render("shared/hamburger") %>
  
  <header class="header_11">
    <%= render("shared/nav") %>

    <div class="container nopadding">
      <div class="max_width470 inner">
        <div class="max_width570 top250 left_block">
          <%= yield %>
        </div>
      </div>
      <img srcset="<%= asset_path 'rotation-app@1x.png' %> 1x, <%= asset_path 'rotation-app@2x.png' %> 2x" src="<%= asset_path 'rotation-app@1x.png' %>" class="left470 bg" alt="" />
    </div>
  </header>
<% end %>

<% content_for :footer do %>
  <footer class="footer_8 bg_dark_gray padding_top40 padding_bottom20">
    <div class="container nopadding">
      <div class="flex justify_between inner">
        <div class="bottom30 block block_left text-center text-lg-left">
          <div class="top10 ubuntu font20 font_second white">the rotation</div>
        </div>
        <div class="top10 bottom30 block block_center text-center">
          <a href="#" class="font12 uppercase spacing15 link white sides15">Privacy</a>
          <a href="#" class="font12 uppercase spacing15 link white sides15">Terms & Conditions</a>
          <a href="#" class="font12 uppercase spacing15 link white sides15">Contact</a>
        </div>
        <div class="block block_right text-center text-lg-right">
          <a href="#" class="link white text-center left10"><i class="fab fa-twitter line_height50"></i></a>
          <a href="#" class="link white text-center left10"><i class="fab fa-facebook line_height50"></i></a>
          <a href="#" class="link white text-center left10"><i class="fab fa-instagram line_height50"></i></a>
        </div>
      </div>
    </div>
  </footer>

  <!-- forms alerts -->
  <div class="alert alert-success alert-dismissible alert-form-success" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <span class="content">Thanks for your message!</span>
  </div>
  <div class="alert alert-warning alert-dismissible alert-form-check-f lds" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <span class="content">Please, fill in required fields.</span>
  </div>
  <div class="alert alert-danger alert-dismissible alert-form-error" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <span class="content">An error occurred while sending data :(</span>
  </div>

  <%= javascript_include_tag 'footer', 'data-turbolinks-track': 'reload' %>
<% end %>
<%= render template: "layouts/application" %>