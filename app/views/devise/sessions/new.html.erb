<header class="header_11">
  <%= render("shared/nav") %>

  <div class="container nopadding">
    <div class="max_width470 inner">
      <div class="max_width570 top250 left_block">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "width470 text_center top80 header_3_form"}) do |f| %>
          <%= f.email_field :email, autofocus: true, class: "width_full radius6", placeholder: "Email Address" %>
          <%= f.password_field :password, class: "width_full radius6 top30", placeholder: "Password" %>
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me, style: "height: 12px" %>
            <%= f.label :remember_me, class: "top30 medium_gray text" %>
          <% end -%>
          <%= f.button "Log in", type: :submit, class: "btn width_full size60 blue radius6 top30" %>
        <% end %>
        <%= link_to "Sign up", new_registration_path(resource_name) %><br />
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      </div>
    </div>
    <img srcset="<%= asset_path 'rotation-app@1x.jpg' %> 1x, <%= asset_path 'rotation-app@2x.jpg' %> 2x" src="<%= asset_path 'rotation-app@1x.jpg' %>" class="left470 bg" alt="" />
  </div>
</header>