<h1 class="ubuntu font42">Sign up</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "width470 text_center top80 header_3_form"}) do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email, autofocus: true, class: "width_full radius6", placeholder: "Email Address", :required => "required"  %>
  <%= f.password_field :password, class: "width_full radius6 top30", placeholder: "Password", :required => "required" %>
  <%= f.password_field :password_confirmation, class: "width_full radius6 top30", placeholder: "Confirm", :required => "required"  %>
  <%= f.button "Sign up", type: :submit, class: "btn width_full size60 blue radius6 top30" %>
<% end %>
<%= link_to "Log in", new_user_session_path %><br />
<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />