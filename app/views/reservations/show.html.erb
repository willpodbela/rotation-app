<%= link_to("<< Back to List", item_reservations_path(@item), :class => 'back-link') %>

<div class="reservations show">
  <h2>Show Reservation</h2>

  <table summary="Reservation detail view">
      <tr>
        <th>User ID</th>
        <td><%= @reservation.user.id %></td>
      </tr>
      <tr>
        <th>User Email</th>
        <td><%= @reservation.user.email %></td>
      </tr>
      <tr>
        <th>Start Date</th>
        <td><%= @reservation.start_date %></td>
      </tr>
      <tr>
        <th>End Date</th>
        <td><%= @reservation.end_date %></td>
      </tr>
      <tr>
        <th>Status</th>
        <td><%= @reservation.status %></td>
      </tr>
    </table>

</div>