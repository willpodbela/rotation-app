<%= link_to("<< All Reservations", reservations_path, :class => 'back-link') %></br>
<%= link_to("<< All Reservations for Item", item_reservations_path(@item), :class => 'back-link') unless @item.nil? %>
<%= link_to("<< All Reservations for User", user_reservations_path(@user), :class => 'back-link') unless @user.nil? %>

<div class="reservations new">
  <h2>Create Reservation</h2>

  <%= form_for([@item ? @item : @user, @reservation]) do |f| %>
    
    <table summary="Reservation form fields">
      <tr>
        <% if @item  %>
          <th>User ID</th>
          <td><%= f.text_field(:user_id) %></td>
        <% else %>
          <th>Item ID</th>
          <td><%= f.text_field(:item_id) %></td>
        <% end %>
      </tr>
      <tr>
        <th>Size</th>
        <td><%= f.collection_select :size, Reservation.sizes.map{ |a| [a.first,a.first] },  :first, :second %></td>
      </tr>
      <tr>
        <th>Start Date</th>
        <td><%= f.date_select :start_date, include_blank: true %></td>
      </tr>
      <tr>
        <th>End Date</th>
        <td><%= f.date_select :end_date, include_blank: true %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create") %>
    </div>

  <% end %>
</div>
