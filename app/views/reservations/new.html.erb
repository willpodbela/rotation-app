<%= link_to("<< All Reservations", reservations_path, :class => 'back-link') %></br>
<%= link_to("<< All Reservations for Item", item_reservations_path(@item), :class => 'back-link') %>

<div class="reservations new">
  <h2>Create Reservation</h2>

  <%= form_for([@item, @reservation]) do |f| %>

    <table summary="Reservation form fields">
      <tr>
        <th>User ID</th>
        <td><%= f.text_field(:user_id) %></td>
      </tr>
      <tr>
        <th>Start Date</th>
        <td><%= f.date_select :start_date, include_blank: true %></td>
      </tr>
      <tr>
        <th>End Date</th>
        <td><%= f.date_select :end_date, include_blank: true %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Item") %>
    </div>

  <% end %>
</div>
