<%= link_to("<< Back to List", items_path, :class => 'back-link') %>

<div class="items show">
  <h2>Show Item</h2>

  <table summary="Item detail view">
    <tr>
      <th>Title</th>
      <td><%= @item.title %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @item.description %></td>
    </tr>
    <tr>
      <th>Quanity</th>
      <td><%= @item.quantity %></td>
    </tr>
    <tr>
      <th>Image</th>
      <td><%= link_to(image_tag(@item.image.url(:thumb)), @item.image.url, target: '_blank') if @item.image.exists? %></td>
    </tr>
  </table>

<%= link_to("Reservations", item_reservations_path(@item), :class => 'action index') %>

</div>
