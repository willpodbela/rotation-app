{
  "name": "rotation-app",
  "scripts": {
    "postdeploy": "bundle exec rake db:seed"
  },
  "env": {
    "API_AUTH_NAME": {
      "required": true
    },
    "API_AUTH_PASSWORD": {
      "required": true
    },
    "APN_CERTIFICATE": {
      "required": true
    },
    "APN_CERTIFICATE_PASSPHRASE": {
      "required": true
    },
    "APN_ENVIRONMENT": {
      "required": true
    },
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_S3_BUCKET": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "EMAIL_PREFIX": {
      "required": true
    },
    "INSTAGRAM_ENABLED": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "SENDGRID_DOMAIN": {
      "required": true
    },
    "SENDGRID_PASSWORD": {
      "required": true
    },
    "SENDGRID_USERNAME": {
      "required": true
    },
    "STRIPE_PLAN_ID": {
      "required": true
    },
    "STRIPE_SECRET_KEY": {
      "required": true
    },
    "STRIPE_PUBLISHABLE_KEY": {
      "required": true
    },
    "GA_TRACKING_ID": {
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
